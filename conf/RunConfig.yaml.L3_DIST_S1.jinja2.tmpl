RunConfig:
  Name: OPERA-DIST-S1-PGE-CONFIG
  Groups:
    PGE:
      PGENameGroup:
        PGEName: DIST_S1_PGE
      InputFilesGroup:
        InputFilePaths:
          {%- for input in runconfig.input_file_group.pre_rtc_copol %}
          - {{ input }}
          {%- endfor %}
          {%- for input in runconfig.input_file_group.pre_rtc_crosspol %}
          - {{ input }}
          {%- endfor %}
          {%- for input in runconfig.input_file_group.post_rtc_copol %}
          - {{ input }}
          {%- endfor %}
          {%- for input in runconfig.input_file_group.post_rtc_crosspol %}
          - {{ input }}
          {%- endfor %}
          {%- if runconfig.input_file_group.prev_product %}
          - {{ runconfig.input_file_group.prev_product }}
          {%- endif %}
      DynamicAncillaryFilesGroup:
        AncillaryFileMap:
          water_mask_path: {{ runconfig.dynamic_ancillary_file_group.water_mask }}
      ProductPathGroup:
        OutputProductPath: {{ runconfig.product_path_group.product_path }}
        ScratchPath: {{ runconfig.product_path_group.scratch_path }}
      PrimaryExecutable:
        ProductIdentifier: DIST_S1
        ProductVersion: "{{ runconfig.product_path_group.product_version }}"
        ProgramPath: /opt/conda/envs/dist-s1-env/bin/dist-s1
        ProgramOptions:
        - run_sas
        - --runconfig_yml_path
        ErrorCodeBase: 700000
        SchemaPath: /home/ops/opera/pge/dist_s1/schema/dist_s1_sas_schema.yaml
        AlgorithmParametersSchemaPath: /home/ops/opera/pge/dist_s1/schema/algorithm_parameters_dist_s1_schema.yaml
        IsoTemplatePath: /home/ops/opera/pge/dist_s1/templates/OPERA_ISO_metadata_L3_DIST_S1_template.xml.jinja2
        IsoMeasuredParameterDescriptions: /home/ops/opera/pge/dist_s1/templates/dist_s1_measured_parameters.yaml
      QAExecutable:
        Enabled: false
        ProgramPath: null
        ProgramOptions: []
      DebugLevelGroup:
        DebugSwitch: false
        ExecuteViaShell: true
    SAS:
      run_config:
        pre_rtc_copol:
          {%- for input in runconfig.input_file_group.pre_rtc_copol %}
          - {{ input }}
          {%- endfor %}
        pre_rtc_crosspol:
          {%- for input in runconfig.input_file_group.pre_rtc_crosspol %}
          - {{ input }}
          {%- endfor %}
        post_rtc_copol:
          {%- for input in runconfig.input_file_group.post_rtc_copol %}
          - {{ input }}
          {%- endfor %}
        post_rtc_crosspol:
          {%- for input in runconfig.input_file_group.post_rtc_crosspol %}
          - {{ input }}
          {%- endfor %}
        {%- if runconfig.input_file_group.prev_product %}
        prior_dist_s1_product: {{ runconfig.input_file_group.prev_product }}
        {%- else %}
        prior_dist_s1_product:
        {%- endif %}
        mgrs_tile_id: {{ runconfig.mgrs_tile_id }}
        dst_dir: {{ runconfig.product_path_group.scratch_path }}
        water_mask_path: {{ runconfig.dynamic_ancillary_file_group.water_mask }}
        apply_water_mask: {{ runconfig.apply_water_mask }}
        product_dst_dir: {{ runconfig.product_path_group.product_path }}
        algo_config_path: {{ runconfig.product_path_group.input_path }}/AlgoParams.yaml
